<h1>Créer un Gossip</h1>

<%= form_tag url_for(action: 'create'), method: "post" do %>
        <div class="form-group">
          <%= label_tag 'Titre :' %>
          <%= text_field_tag 'title', @gossip.title, {class: 'form-control'} %>
        </div>
        <div class="form-group">
          <%= label_tag 'Contenu :' %>
          <%= text_area_tag 'content', @gossip.content, {class: 'form-control'} %>
        </div>
        <div class="form-group">
          <%= label_tag 'Auteur :' %>
          <%= select_tag "user", options_from_collection_for_select(User.all, :id, :first_name), {class: 'form-control', prompt: 'Choisir un utilisateur'} %>
        </div>
        <div class="row justify-content-center">
          <%= submit_tag "Créer le potin", {class: 'btn btn-primary'} %>
        </div>
      <% end %>